{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["element-plus/global"],
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
